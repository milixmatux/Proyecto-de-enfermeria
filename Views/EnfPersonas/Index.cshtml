@model IEnumerable<Enfermeria_app.Models.EnfPersona>

@{
    ViewData["Title"] = "Listado de Personas";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <!-- Controles superiores -->
    <div class="row align-items-center mb-3">
        <div class="col-12 col-md-6 mb-2 mb-md-0 d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Crear Nueva Persona
            </a>
            <a asp-action="Inactivos" class="btn btn-outline-secondary">
                <i class="bi bi-person-dash"></i> Ver Inactivos
            </a>
        </div>

        <div class="col-12 col-md-6">
            <div class="input-group w-100">
                <input type="text" id="searchBox" class="form-control" placeholder="Buscar por nombre..." autocomplete="off" />
            </div>

        </div>
    </div>

    <!-- Tabla de personas -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Cedula)</th>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="12" class="text-center text-danger">
                            No se encontraron resultados.
                            <a asp-action="Index" class="btn btn-link">Volver al listado</a>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Cedula</td>
                            <td>@item.Nombre</td>
                            <td>@item.Tipo</td>
                            <td>
                                <!-- Botones de acción: horizontales en escritorio, verticales en móvil -->
                                <div class="btn-group d-none d-md-flex" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">
                                        <i class="bi bi-eye"></i> Detalles
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-x-circle"></i> Desactivar
                                    </a>
                                </div>

                                <!-- Versión vertical solo visible en pantallas pequeñas -->
                                <div class="d-flex d-md-none flex-column gap-1">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm w-100">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm w-100 text-white">
                                        <i class="bi bi-eye"></i> Detalles
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm w-100">
                                        <i class="bi bi-x-circle"></i> Desactivar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    @section Scripts {
        <script>
            const searchBox = document.getElementById("searchBox");
            const tableBody = document.querySelector("tbody");

            searchBox.addEventListener("keyup", async () => {
                const query = searchBox.value.trim();

                // Hacer una llamada AJAX al servidor
                const response = await fetch(`/EnfPersonas/Buscar?term=${encodeURIComponent(query)}`);
                const html = await response.text();

                // Reemplazar solo el contenido del cuerpo de la tabla
                tableBody.innerHTML = html;
            });
        </script>
    }

</div>