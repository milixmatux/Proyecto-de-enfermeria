@model IEnumerable<Enfermeria_app.Models.EnfPersona>

@{
    ViewData["Title"] = "Listado de Personas";

    var tipo = Context.Session.GetString("TipoUsuario") ?? "";
    bool esAdmin = tipo == "Administrativo";
    bool esConsultorio = tipo == "Consultorio";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success">@TempData["Mensaje"]</div>
    }

    <!-- Controles superiores -->
    <div class="row align-items-center mb-3">

        <!-- Botones solo para ADMINISTRATIVO -->
        @if (esAdmin)
        {
            <div class="col-12 col-md-6 mb-2 mb-md-0 d-flex gap-2">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-person-plus"></i> Crear Nueva Persona
                </a>

                <a asp-action="Inactivos" class="btn btn-outline-secondary">
                    <i class="bi bi-person-dash"></i> Ver Inactivos
                </a>
            </div>
        }

        <!-- Campo de búsqueda -->
        <div class="col-12 col-md-6">
            <div class="input-group w-100">
                <input type="text" id="searchInput" class="form-control"
                       placeholder="Buscar por nombre o cédula..." autocomplete="off" />
            </div>
        </div>
    </div>

    <!-- Tabla de personas -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Cédula</th>
                    <th>Nombre</th>
                    <th>Tipo</th>
                    <th>Acciones</th>
                </tr>
            </thead>

            <tbody id="tablaPersonas">
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="4" class="text-center text-danger">
                            No se encontraron resultados.
                            <a asp-action="Index" class="btn btn-link">Volver al listado</a>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Cedula</td>
                            <td>@item.Nombre</td>
                            <td>@item.Tipo</td>
                            <td>
                                <!-- PC: botones horizontales -->
                                <div class="btn-group d-none d-md-flex" role="group">

                                    <!-- Emergencia: ADMIN + CONSULTORIO -->
                                    <button type="button"
                                            class="btn btn-danger btn-sm btnCitaEmergencia"
                                            data-id="@item.Id"
                                            data-nombre="@item.Nombre">
                                        <i class="bi bi-activity"></i> Emergencia
                                    </button>

                                    @if (esAdmin)
                                    {
                                        <a asp-action="Details"
                                           asp-route-id="@item.Id"
                                           class="btn btn-info btn-sm">
                                            <i class="bi bi-eye"></i> Detalles
                                        </a>

                                        <a asp-action="Delete"
                                           asp-route-id="@item.Id"
                                           class="btn btn-warning btn-sm">
                                            <i class="bi bi-x-circle"></i> Desactivar
                                        </a>
                                    }
                                </div>

                                <!-- TELÉFONO: botones verticales -->
                                <div class="d-flex d-md-none flex-column gap-1">

                                    <!-- Emergencia: ADMIN + CONSULTORIO -->
                                    <button type="button" class="btn btn-danger btn-sm btnCitaEmergencia"
                                            data-id="@item.Id"
                                            data-nombre="@item.Nombre">
                                        <i class="bi bi-activity"></i> Emergencia
                                    </button>

                                    @if (esAdmin)
                                    {
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-info btn-sm">
                                            <i class="bi bi-eye"></i> Detalles
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-warning btn-sm">
                                            <i class="bi bi-x-circle"></i> Desactivar
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {

            // 🔍 BÚSQUEDA AJAX
            $("#searchInput").on("keyup", function () {
                var term = $(this).val();

                $.ajax({
                    url: '/EnfPersonas/Buscar',
                    type: 'GET',
                    data: { term: term },
                    success: function (result) {
                        $("#tablaPersonas").html(result);
                    }
                });
            });

            // 🚨 CITA DE EMERGENCIA
            $(document).on("click", ".btnCitaEmergencia", function () {

                var idPersona = $(this).data("id");
                var nombre = $(this).data("nombre");

                if (!confirm("¿Deseas crear una cita de emergencia para " + nombre + "?"))
                    return;

                $.ajax({
                    url: '/EnfPersonas/CitaEmergencia/' + idPersona,
                    type: 'POST',
                    success: function (response) {

                        if (response.success) {
                            alert("✅ " + response.message);
                        } else {
                            alert("⚠️ " + response.message);
                        }
                    },
                    error: function () {
                        alert("❌ Error al crear la cita de emergencia.");
                    }
                });
            });
        });
    </script>
}
