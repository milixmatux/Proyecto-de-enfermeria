@model IEnumerable<Enfermeria_app.Models.EnfPersona>

@{
    ViewData["Title"] = "Listado de Personas";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success">@TempData["Mensaje"]</div>
    }

    <!-- Controles superiores -->
    <div class="row align-items-center mb-3">
        <div class="col-12 col-md-6 mb-2 mb-md-0 d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Crear Nueva Persona
            </a>
            <a asp-action="Inactivos" class="btn btn-outline-secondary">
                <i class="bi bi-person-dash"></i> Ver Inactivos
            </a>
        </div>

        <div class="col-12 col-md-6">
            <div class="input-group w-100">
                <input type="text" id="searchInput" class="form-control" placeholder="Buscar por nombre o cédula..." autocomplete="off" />
            </div>
        </div>
    </div>

    <!-- Tabla de personas -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Cedula)</th>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody id="tablaPersonas">
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="12" class="text-center text-danger">
                            No se encontraron resultados.
                            <a asp-action="Index" class="btn btn-link">Volver al listado</a>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Cedula</td>
                            <td>@item.Nombre</td>
                            <td>@item.Tipo</td>
                            <td>
                                <div class="btn-group d-none d-md-flex" role="group">
                                    <button type="button" class="btn btn-danger btn-sm btnCitaEmergencia"
                                            data-id="@item.Id" data-nombre="@item.Nombre">
                                        <i class="bi bi-activity"></i> Emergencia
                                    </button>

                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                        <i class="bi bi-eye"></i> Detalles
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        <i class="bi bi-x-circle"></i> Desactivar
                                    </a>
                                </div>

                                <div class="d-flex d-md-none flex-column gap-1">
                                    <button type="button" class="btn btn-danger btn-sm btnCitaEmergencia"
                                            data-id="@item.Id" data-nombre="@item.Nombre">
                                        <i class="bi bi-activity"></i> Emergencia
                                    </button>

                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                        <i class="bi bi-eye"></i> Detalles
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        <i class="bi bi-x-circle"></i> Desactivar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // --- 🔍 BÚSQUEDA EN TIEMPO REAL ---
            $("#searchInput").on("keyup", function () {
                var term = $(this).val();

                $.ajax({
                    url: '/EnfPersonas/Buscar',
                    type: 'GET',
                    data: { term: term },
                    success: function (result) {
                        $("#tablaPersonas").html(result); // Reemplaza las filas de la tabla
                    },
                    error: function () {
                        console.error("❌ Error al buscar personas.");
                    }
                });
            });

            // --- 🚨 CITA DE EMERGENCIA ---
            $(document).on("click", ".btnCitaEmergencia", function () {
                var idPersona = $(this).data("id");
                var nombre = $(this).data("nombre");

                if (!confirm("¿Deseas crear una cita de emergencia para " + nombre + "?"))
                    return;

                $.ajax({
                    url: '/EnfPersonas/CitaEmergencia/' + idPersona,
                    type: 'POST',
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                        } else {
                            alert("⚠️ " + response.message);
                        }
                    },
                    error: function () {
                        alert("❌ Error al crear la cita de emergencia.");
                    }
                });
            });
        });
    </script>
}
