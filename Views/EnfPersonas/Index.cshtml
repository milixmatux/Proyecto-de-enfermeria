@model IEnumerable<Enfermeria_app.Models.EnfPersona>

@{
    ViewData["Title"] = "Listado de Personas";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success">
            @TempData["Mensaje"]
        </div>
    }



    <!-- Controles superiores -->
    <div class="row align-items-center mb-3">
        <div class="col-12 col-md-6 mb-2 mb-md-0 d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Crear Nueva Persona
            </a>
            <a asp-action="Inactivos" class="btn btn-outline-secondary">
                <i class="bi bi-person-dash"></i> Ver Inactivos
            </a>
        </div>

        <div class="col-12 col-md-6">
            <div class="input-group w-100">
                <input type="text" id="searchBox" class="form-control" placeholder="Buscar por nombre..." autocomplete="off" />
            </div>

        </div>
    </div>

    <!-- Tabla de personas -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Cedula)</th>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="12" class="text-center text-danger">
                            No se encontraron resultados.
                            <a asp-action="Index" class="btn btn-link">Volver al listado</a>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Cedula</td>
                            <td>@item.Nombre</td>
                            <td>@item.Tipo</td>
                            <td>
                                <!-- Botones de acción: horizontales en escritorio, verticales en móvil -->
                                <div class="btn-group d-none d-md-flex" role="group">
                                    <button type="button" class="btn btn-danger btn-sm btnEmergencia" data-id="@item.Id">
                                        <i class="bi bi-activity"></i> Emergencia
                                    </button>


                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                        <i class="bi bi-eye"></i> Detalles
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-x-circle"></i> Desactivar
                                    </a>

                                </div>

                                <!-- Versión vertical solo visible en pantallas pequeñas -->
                                <div class="d-flex d-md-none flex-column gap-1">
                                    <button type="button" class="btn btn-danger btn-sm btnEmergencia" data-id="@item.Id">
                                        <i class="bi bi-activity"></i> Emergencia
                                    </button>

                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                        <i class="bi bi-eye"></i> Detalles
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-x-circle"></i> Desactivar
                                    </a>

                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    @section Scripts {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                // Escuchar los clics en todos los botones de emergencia
                document.querySelectorAll(".btnEmergencia").forEach(btn => {
                    btn.addEventListener("click", async function (e) {
                        e.preventDefault(); // <- evita redirecciones o interferencias
                        e.stopPropagation();

                        const id = this.getAttribute("data-id");

                        if (!confirm("¿Deseas crear una cita de emergencia para esta persona?")) return;

                        try {
                            const response = await fetch(`/EnfPersonas/CitaEmergencia/${id}`, {
                                method: "GET"
                            });
                            const result = await response.json();

                            if (result.success) {
                                alert(result.message); // Muestra mensaje de éxito
                            } else {
                                alert("❌ No se pudo crear la cita de emergencia.");
                            }
                        } catch (error) {
                            console.error("Error:", error);
                            alert("⚠️ Error al crear la cita de emergencia.");
                        }
                    });
                });
            });
        </script>
    }


</div>