@model IEnumerable<Enfermeria_app.Models.EnfPersona>

@{
    var tipo = Context.Session.GetString("TipoUsuario") ?? "";
    bool esAdmin = tipo == "Administrativo";
    bool esConsultorio = tipo == "Consultorio";
}

@if (!Model.Any())
{
    <tr>
        <td colspan="12" class="text-center text-danger">
            No se encontraron resultados.
        </td>
    </tr>
}
else
{
    foreach (var item in Model)
    {
        <tr>
            <td>@item.Cedula</td>
            <td>@item.Nombre</td>
            <td>@item.Tipo</td>

            <td>
                <!-- PC: botones horizontales -->
                <div class="btn-group d-none d-md-flex" role="group">

                    <!-- 🚨 Emergencia (Admin + Consultorio) -->
                    <button type="button"
                            class="btn btn-danger btn-sm btnCitaEmergencia"
                            data-id="@item.Id"
                            data-nombre="@item.Nombre">
                        <i class="bi bi-activity"></i> Emergencia
                    </button>

                    @if (esAdmin)
                    {
                        <a asp-action="Details"
                           asp-route-id="@item.Id"
                           class="btn btn-info btn-sm text-white">
                            <i class="bi bi-eye"></i> Detalles
                        </a>

                        <a asp-action="Delete"
                           asp-route-id="@item.Id"
                           class="btn btn-warning btn-sm">
                            <i class="bi bi-x-circle"></i> Desactivar
                        </a>
                    }
                </div>

                <!-- MÓVIL: botones verticales -->
                <div class="d-flex d-md-none flex-column gap-1">

                    <button type="button"
                            class="btn btn-danger btn-sm btnCitaEmergencia"
                            data-id="@item.Id"
                            data-nombre="@item.Nombre">
                        <i class="bi bi-activity"></i> Emergencia
                    </button>

                    @if (esAdmin)
                    {
                        <a asp-action="Details"
                           asp-route-id="@item.Id"
                           class="btn btn-info btn-sm text-white">
                            <i class="bi bi-eye"></i> Detalles
                        </a>

                        <a asp-action="Delete"
                           asp-route-id="@item.Id"
                           class="btn btn-warning btn-sm">
                            <i class="bi bi-x-circle"></i> Desactivar
                        </a>
                    }
                </div>
            </td>
        </tr>
    }
}
