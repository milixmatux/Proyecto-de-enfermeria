@model Enfermeria_app.Models.RegistroViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrarse</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #d1f2eb;
            font-family: 'Poppins', sans-serif;
        }

        .register-container {
            max-width: 800px;
            width: 100%;
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 3px 12px rgba(0, 0, 0, 0.08);
            background: white;
            margin: auto;
        }

        @@media screen and (max-width: 576px) {
            .register-container

        {
            padding: 1.5rem 1rem;
            border-radius: 0;
            box-shadow: none;
            margin: 0;
        }

        }

        .form-control {
            border-radius: 10px;
        }

        .btn-primary {
            border-radius: 10px;
            background-color: #007bff;
            border: none;
            font-weight: 600;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="register-container">
            <h2 class="text-center mb-4">Registrarse</h2>
            <form asp-action="Registro" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Cedula"></label>
                        <input asp-for="Cedula" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Nombre"></label>
                        <input asp-for="Nombre" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Telefono"></label>
                        <input asp-for="Telefono" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Usuario"></label>
                        <input asp-for="Usuario" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" type="password" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Departamento"></label>
                        <input asp-for="Departamento" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Tipo"></label>
                        <select asp-for="Tipo" class="form-control">
                            <option>Asistente</option>
                            <option>Estudiante</option>
                            <option>Funcionario</option>
                            <option>Profesor</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Seccion"></label>
                        <input asp-for="Seccion" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="FechaNacimiento"></label>
                        <input asp-for="FechaNacimiento" class="form-control" type="date" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Sexo"></label>
                        <select asp-for="Sexo" class="form-control">
                            <option value="M">Masculino</option>
                            <option value="F">Femenino</option>
                        </select>
                    </div>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @ViewBag.Error
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                    </div>
                }

                @if (ViewBag.Mensaje != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @ViewBag.Mensaje
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                    </div>
                }


                <button type="submit" class="btn btn-primary w-100">Registrarse</button>
                <div class="text-center mt-3">
                    <a href="/Cuenta/Login">¿Ya tienes cuenta? Inicia sesión</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
